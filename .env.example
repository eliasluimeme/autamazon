# ==========================================
# Amazon Automation Configuration Template
# ==========================================

# --- Decodo Proxy Settings ---
# These credentials are used to generate rotating residential proxies
DECODO_USERNAME=your_decodo_username
DECODO_PASSWORD=your_decodo_password

# Proxy Logic
# Target country code (e.g., 'be', 'us', 'de', 'gb')
# If RANDOM_COUNTRY_MODE is true, this is ignored
TARGET_COUNTRY=be

# Set to 'true' to pick a random supported country for each session
RANDOM_COUNTRY_MODE=false

# Duration in minutes for sticky proxy sessions
PROXY_SESSION_DURATION=60

# Optional Overrides for Proxy Host/Port
# DECODO_PROXY_HOST=gate.decodo.com
# DECODO_PROXY_PORT=7000

# --- AdsPower Settings ---
# URL for the local AdsPower API
ADSPOWER_API_URL=http://local.adspower.net:50325

# --- OpSec Workflow ---
# Enable two-phase browser validation (warmup before target)
ENABLE_OPSEC_WORKFLOW=true

# Target landing page URL (e.g., for CPA offers)
TARGET_URL=https://royalcasino.vercel.app

# Seconds to spend on warm-up site (e.g., google.com)
WARMUP_DURATION=3

# --- Logging ---
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- AgentQL ---
# API Key for AgentQL (required for intelligent element selection)
AGENTQL_API_KEY=your_agentql_api_key
